<!DOCTYPE html>
<html>
<head lang="en">
  <meta charset="UTF-8">
  <title>King of Thieves</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
  <meta name="HandheldFriendly" content="true"/>
  <meta name="MobileOptimized" content="320"/>
  <script type="text/javascript">
            window.addEventListener("load", function () {
                document.getElementById('game').onclick = GoSite;
                document.getElementById('play').onclick = GoPlay;
                document.getElementById('logo').onclick = GoLogo;
                function GoSite() {
                    ga('send', 'event', '<% if @page.store == 1 %>android<% else %>ios<% end %>', '<%= @page.title %>', 'Загрузить');
                    window.location.assign("<%= @page.link %>");
                }
                function GoPlay() {
                    ga('send', 'event', 'android', '<%= @page.title %>', 'Играть');
                    window.location.assign("<%= @page.link %>");
                }
                function GoLogo() {
                    ga('send', 'event', 'android', '<%= @page.title %>', 'Иконка');
                    window.location.assign("<%= @page.link %>");
                }
            });
  </script>
  <style>
    * {
      margin: 0;
      padding: 0;
      line-height: 1;
      border: 0;
      text-decoration: none;
      font-weight: normal;
    }

    html {
      height: 100%;
      width: 100%;
    }

    a {
      text-decoration: underline;
    }

    a:hover {
      text-decoration: none;
    }

    button {
      cursor: pointer;
    }

    body {
      background-color: #FFF;
      color: #333;
      font-family: arial, helvetica, sans-serif;
      font-size: 10px;
      position: relative;
      min-height: 100%;
      width: 100%;
      min-width: 320px;
    }

    table {
      background: url("<%= @page.img_bottom %>") no-repeat 50% 100% #ffffff;
      background-size: 100% auto;
      vertical-align: bottom;
      width: 100%;
      max-width: 720px;
      margin: 0 auto;
      min-height: 25em;
      height: 100%;
      height: 100vh;
      border-collapse: collapse;
    }

    /* head */
    #head {
      text-align: center;
      overflow: hidden;
      position: relative;
      width: 100%;
      background-color: #FFF;
    }

    #head td {
      background: url("<%= @page.img_right %>") no-repeat 100% 100%;
      background-size: 20% auto;
    }

    .game {
      width: 70%;
      padding: 10% 20% 10% 10%;
      overflow: hidden;
    }

    .game > div {
      float: left;
      text-align: left;
    }

    .game .logo {
      width: 9em;
      max-width: 175px;
      padding-right: 7%;
    }

    .game .logo img {
      max-width: 100%;
    }

    .game h3 {
      font-size: 1.7em;
      /*padding: 0.1em 0 1em;*/
      margin-bottom: 0.5em;
      /*background: url("/img/stars.jpg") no-repeat 0 100%;*/
      background-size: 80% auto;
    }

    <% if @page.store == 1 %>
    .game button {
      color: #FFF;
      font-size: 1em;
      padding: 0.8em 2em 0.5em;
      text-transform: uppercase;
      background-color: #68a330;
      -moz-border-radius: 0.3em;
      -webkit-border-radius: 0.3em;
      -khtml-border-radius: 0.3em;
      border-radius: 0.3em;
      behavior: url('/img/border-radius.htc');
    }

    <% else %>
    .game button {
      color: #268ad3;
      background-color: #FFF;
      text-transform: uppercase;
      font-size: 1em;
      padding: 0.5em 2em;
      border: 1px solid #268ad3;
      -moz-border-radius: 0.3em;
      -webkit-border-radius: 0.3em;
      -khtml-border-radius: 0.3em;
      border-radius: 0.3em;
      behavior: url('/img/border-radius.htc');
    }

    <% end %>
    .game .left {
      padding: 0.1em 0 2em;
    <% if @page.free %> background: url("<% if @page.store == 1 %>/img/gp.jpg<% else %>/img/ios.jpg<% end %>") no-repeat 0 100%;
    <% end %> background-size: 100% auto;
    }

    /* /head */

    /* content */
    #content {
      text-align: center;
      overflow: hidden;
      position: relative;
      height: 80%;
      width: 100%;
      vertical-align: bottom;
      /*background: url("/img/bg-inner.jpg") no-repeat 50% 100%;*/
      background-size: 100% auto;
    }

    #content td {
      /*background: url("") no-repeat 0 0;*/
      background-size: 40% auto;
    }

    #content button {
      background-color: <%= '#'+@page.button_color %>;
      color: #FFF;
      display: block;
      width: 80%;
      margin: 0 10% 10%;
      font-size: 3em;
      line-height: 1.5;
      text-transform: uppercase;
      -moz-border-radius: 0.2em;
      -webkit-border-radius: 0.2em;
      -khtml-border-radius: 0.2em;
      border-radius: 0.2em;
      behavior: url('/img/border-radius.htc');
      letter-spacing: 2px;
      box-shadow: 0 0 0.3em rgba(0, 0, 0, 0.3);
    }

    /* /content */

    /* #foot */
    #foot p, #foot p a {
      color: #2d1b14;
    }

    #foot p {
      font-size: 10px;
      padding: 10px 5px;
      text-align: center;
      max-width: 710px;
      margin: 0 auto;
      background-color: #70503b;
    }

    /* /#foot */

    /*@media (min-height: 450px) {*/
    /*body {font-size: 16px;}*/
    /*}*/
    /*@media (max-width: 405px){*/
    /*body {font-size: 10px;}*/
    /*}*/
    @media (min-width: 360px) {
      body {
        font-size: 11px;
      }

      .game {
        width: 80%;
        padding: 5% 15% 5% 5%;
      }
    }

    @media (min-width: 400px) {
      body {
        font-size: 12px;
      }

      .game .logo {
        padding-right: 10%;
      }
    }

    @media (min-width: 450px) {
      body {
        font-size: 13px;
      }
    }

    @media (min-width: 500px) {
      body {
        font-size: 14px;
      }

      .game button {
        font-size: 1.2em;
      }
    }

    @media (min-height: 550px) {
      .game button {
        padding: 0.6em 2em 0.5em;
      }
    }

    @media (min-width: 550px) {
      body {
        font-size: 15px;
      }
    }

    /*@media (min-device-aspect-ratio: 9/6){*/
    /*h1 {display: none}*/
    /*}*/
    @media (orientation: landscape) {
      #content {
        background-size: auto 100%;
      }

      .game {
        width: 90%;
        padding: 3% 7% 3% 3%;
      }

      #content button {
        width: auto;
        margin: 0 auto 5%;
        font-size: 2.5em;
        padding: 0 1em;
      }

    }

    @media (orientation: landscape) and (min-width: 500px) and (min-height: 350px) {
      #content button {
        font-size: 3.5em;
      }
    }
  </style>
</head>
<body>
<table>
  <tr id="head">
    <td>
      <div class="game">
        <div class="logo" id="logo">
          <img src="<%= @page.img_left %>" alt=""/>
        </div>
        <div class="left">
          <h3><%= @page.title %></h3>
          <span class="stars-container">
            <div class="reason-set-star-rating" style="    display: block;
                height: 24px;
                margin-top: 5px;">
              <div class="tiny-star star-rating-non-editable-container"
              style="background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAOCAQAAAC1QeVaAAAAYElEQVR4AY3QQQeEIRCA4T13iqFDp04dYoh+2vv/7Y7YL4b66j1MPCn6fA+9438hiI0NKrpBhGGJQxKZSp/YbZdJCwvDVda1not7k/ZQm3SPw6qWTYcElDgPRZRw9X2HfsTTkjWVYOnFAAAAAElFTkSuQmCC);
                  height: 14px;
