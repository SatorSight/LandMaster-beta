                <div class="current-rating" style="width: <%= stars(@page) %>%;    background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAOCAQAAAC1QeVaAAAAY0lEQVR4AWP4jwcSloSB4oTiBCCFQ/JB8QN0SYS+/0CYgCZZXFDcUHyg+ANIEkgeAPIKEJILgIKocAHCWHTpBWh2Fl+AS10AipEgCRY+AIRAGk2y2ADoxwCwogAgy4Co4MMDAQ52uOmaLCe/AAAAAElFTkSuQmCC) left bottom;
                    display: block;
                    position: absolute;
                    height: 14px;"></div>

              </div>
              <span style="color: gray;position: relative;
                  top: -2px;"><%= @page.start.to_i %></span>
            </div>
          </span>
          <button id="game">Загрузить</button>
        </div>
      </div>
    </td>
  </tr>
  <tr id="content">
    <td>
      <button id="play"><%= @page.button_text %></button>
    </td>
  </tr>
</table>
